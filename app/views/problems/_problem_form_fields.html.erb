<div class="form-group row">
  <label class="col-2 col-form-label">Language:</label>
  <div class="col-10">
    <select name="languages" class="form-control" v-model="formData.language_id">
      <option value="1">C</option>
    </select>
  </div>
</div>

<div class="form-group row">
  <label class="col-2 col-form-label">Text:</label>
  <div class="col-10">
        <textarea name="text" class="form-control" v-model="formData.text" rows="5" cols="50" required>
    </textarea>
  </div>
</div>

<div class="form-group row">
  <label class="col-2 col-form-label">Setup:</label>
  <div class="col-10">
    <textarea name="setup" class="form-control" v-model="formData.setup" rows="5" cols="50" required>
    </textarea>
  </div>
</div>

<div class="form-group row">
  <label class="col-2 col-form-label">Test Cases:</label>
  <div class="col-10">
    <label class="col-10 col-form-label text-secondary">Format: [INPUT] => [OUTPUT] <br/> Eg: [5, 10] => [15]</label>
    </br>
    <label class="col-10 col-form-label text-secondary">Multiple test cases separated by new line.</label>
    </br>
    <textarea name="setup" class="form-control" v-model="formData.test_cases" rows="5" cols="50" required>
    </textarea>
  </div>
</div>

<div class="form-group row">
  <label class="col-2 col-form-label">Function Name:</label>
  <div class="col-10">
    <input name="function_name" class="form-control" type="text" v-model="formData.function_name" required>
  </div>
</div>